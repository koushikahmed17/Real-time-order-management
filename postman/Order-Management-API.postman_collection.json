    {
      "name": "Order Management",
      "item": [
        {
          "name": "Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.test(\"Order created successfully\", function () {",
                  "        pm.response.to.have.status(201);",
                  "        var jsonData = pm.response.json();",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "        pm.expect(jsonData.data.order).to.have.property('id');",
                  "        pm.expect(jsonData.data.order).to.have.property('totalAmount');",
                  "        pm.expect(jsonData.data.order).to.have.property('paymentMethod');",
                  "        pm.expect(jsonData.data.order).to.have.property('items');",
                  "        pm.expect(jsonData.data.payment).to.have.property('clientSecret');",
                  "        pm.expect(jsonData.data.payment.paymentMethod).to.equal('STRIPE');",
                  "        ",
                  "        // Save order ID and payment details to environment",
                  "        pm.environment.set('order_id', jsonData.data.order.id);",
                  "        pm.environment.set('stripe_client_secret', jsonData.data.payment.clientSecret);",
                  "        pm.environment.set('stripe_payment_intent_id', jsonData.data.payment.paymentIntentId);",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"title\": \"Keyboard\",\n      \"price\": 120,\n      \"quantity\": 1\n    },\n    {\n      \"title\": \"Mouse\",\n      \"price\": 79.99,\n      \"quantity\": 2\n    }\n  ],\n  \"paymentMethod\": \"STRIPE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            },
            "description": "Create a new order. Requires authentication. Calculates total automatically."
          },
          "response": []
        },
