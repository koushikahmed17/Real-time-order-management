          "name": "Create Order with PayPal",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.test(\"Order created successfully with PayPal\", function () {",
                  "        pm.response.to.have.status(201);",
                  "        var jsonData = pm.response.json();",
                  "        pm.expect(jsonData.success).to.be.true;",
                  "        pm.expect(jsonData.data.order.paymentMethod).to.equal('PAYPAL');",
                  "        pm.expect(jsonData.data.payment).to.have.property('approvalUrl');",
                  "        pm.expect(jsonData.data.payment).to.have.property('paypalOrderId');",
